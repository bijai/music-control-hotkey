{
    "name": "Music Control Hotkey",
    "description" : "Extension to Play or Pause Music with Hotkey",
    "version": "0.1",
    "manifest_version": 2,
    "browser_action": {
      "default_popup": "hello.html",
      "default_icon": "icon.png"
    },
    "background": {
        "scripts": ["eventPage.js"]
    },
    "permissions": [
        "tabs",
        "http://*/",
        "https://*/"
    ],
    "commands": {
      "toggle-feature-play": {
        "suggested_key": {
          "default": "Ctrl+Shift+1",
          "mac": "MacCtrl+Shift+1"
        },
        "description": "Play or Pause",
        "global" : true
      }
    }
  
  }